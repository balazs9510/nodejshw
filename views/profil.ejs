<%- include('header'); %>
    <div class="container">
        <div class="row">
            <div class="col-md-4" style="text-align: center">
                <form id="profilImageForm" action="/uploadImage"  enctype="multipart/form-data" method="POST">
                    <% if(user.profilImgPath == ""){%>
                        <img id="profilImgSrc" src="http://via.placeholder.com/300x300" class="responsive" style="margin: 30px">
                    <% } else { %>
                        <img id="profilImgSrc" src="<%= user.profilImgPath %>" class="responsive" style="margin: 30px">
                    <% } %> 
                <a href="#" onclick="openPicker();">
                    <label> Borítókép feltöltése</label>
                </a>
                <input type="file" id="profilImg" accept="image/*" onchange="upload();"  name="profilImg" hidden>
            </form>
            </div>
            <div class="col-md-8">
                <div style=" margin: 50px;">
                    <div class="form-group">
                        <label for="name">Név: </label>
                        <label class="form-control" id="name">
                            <%= user.username%>
                        </label>
                    </div>
                    <div class="form-group">
                        <label for="email">E-mail cím: </label>
                        <label class="form-control" id="email">
                            <%= user.email%>
                        </label>
                    </div>
                    <div class="form-group">
                        <label for="phone">Telefonszám: </label>
                        <label class="form-control" id="phone">
                            <%= user.phone%>
                        </label>
                    </div>
                    <a href="#" style="float: right"> Adataim szerkesztése</a>
                </div>
            </div>
        </div>
        <hr>
        <% if(user.role === "normal"){%>
            <h3>Értékeléseim</h3>
            <%- include('user_ratings'); %>
        <%}else{%>
            <h3>Feltöltött helyeim</h3>
            <%- include('user_pubs'); %>
        <%}%>
    </div>
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
        
          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title">Szerkesztés</h4>
            </div>
            <div class="modal-body">
             
            </div>
            <div class="modal-footer">
              <button type="button" id="modalSave" class="btn btn-default" data-dismiss="modal">Mentés</button>
            </div>
          </div>
          
        </div>
      </div>
    <script>
        function openPicker() {
            var fileinput = document.getElementById('profilImg');
            fileinput.click();
        }
        function upload() {
            var form = document.getElementById("profilImageForm") ;
            form.submit();
        }
    </script>
    <%- include('footer'); %>