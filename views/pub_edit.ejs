<%- include('header'); %>
<div class="container">
    <form name="uploadPubForm" onsubmit="return validateForm()" action="/pub/mod/<%- pub._id %>" method="POST">
        <div class="row">
            <div class="col-md-6">
                <h1 style="padding-bottom: 5px;">Szerkesztés</h1>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label for="name" class="col-sm-2 col-form-label">Név*:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="name" name="name" value="<%- pub.name %>">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label for="adress" class="col-sm-2 col-form-label">Cím*:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="adress" name="adress" value="<%- pub.adress %>">
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <h3>Kapcsolat</h3>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label for="tel" class="col-sm-2 col-form-label">Telefonszám:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="tel"
                                    name="phone"
                                    value="<%- pub.phone %>"
                                    placeholder="+36 30 123 4568">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label for="mail" class="col-sm-2 col-form-label">Email-cím:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="mail" 
                                    name="email"
                                    value="<%- pub.email %>"
                                    placeholder="ex@gmail.com">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label for="web" class="col-sm-2 col-form-label">Weboldal:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="web"
                                    name="web"
                                    value="<%- pub.web %>"
                                    placeholder="wwww.bestpub.com">
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
            </div>
        </div>
        <div style="float:right; display: block">
            <button type="submit" class=" btn btn-success" style="padding-right: 10px">
                Mentés
            </button>
            <a href="/profil">
                <input type="button" class=" btn btn-danger" value="Mégse">
            </a>
        </div>
    </form>
</div>
<script>
    function validateForm() {
        var pub_name = document.forms["uploadPubForm"]["pub_name"].value;
        var pub_adress = document.forms["uploadPubForm"]["pub_adress"].value;

        if (pub_name == "") {
            alert("A nevet kötelező kitölteni!");
            return false;
        }
        
        if (pub_adress == "") {
            alert("A címet kötelező kitölteni!");
            return false;
        }
        return true;
    }
</script>
<%- include('footer'); %>