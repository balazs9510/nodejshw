<%- include('header'); %>
    <div class="container">
        <div class="row" style="margin-top: 20px;">
            <div class="col-md-6 col-md-border">
                <h1 style="padding-bottom: 5px;" id="titleHeader">
                    <%= pub.name %>
                </h1>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row" style="margin-bottom: -15px;">
                            <label for="adress" class="col-sm-3 col-form-label">Cím: </label>
                            <div class="col-sm-9">
                                <label class="form-control" id="adress"> 
                                        <%= pub.adress %>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <h3>Kapcsolat</h3>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label for="tel" class="col-sm-3 col-form-label">Telefonszám:</label>
                            <div class="col-sm-9">
                                <label class="form-control" id="tel">
                                        <% if(pub.phone){ %>
                                            <%= pub.phone %>
                                        <% }else{ %>
                                            -
                                        <% }%>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label for="mail" class="col-sm-3 col-form-label">Email-cím:</label>
                            <div class="col-sm-9">
                                <label class="form-control" id="mail">
                                        <% if(pub.mail){ %>
                                            <%= pub.mail %>
                                        <% }else{ %>
                                            -
                                        <% }%>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label for="web" class="col-sm-3 col-form-label">Weboldal:</label>
                            <div class="col-sm-9">
                                <label class="form-control" id="web">
                                        <% if(pub.web){ %>
                                            <%= pub.web %>
                                        <% }else{ %>
                                            -
                                        <% }%>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <h3>Képek</h3>
                <div class="row">
                    <div style="text-align: center; display: inline">
                        <img src="/images/larrow.png" width="120">
